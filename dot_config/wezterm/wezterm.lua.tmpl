local wezterm = require 'wezterm'
local config = wezterm.config_builder()

-------------------------------------------------------------------------------
-- Font: MonoLisa with fallback
-------------------------------------------------------------------------------
config.font = wezterm.font_with_fallback {
  'MonoLisa Nerd Font',
  'JetBrainsMono Nerd Font',
}
config.font_size = 14.0

-------------------------------------------------------------------------------
-- Catppuccin Mocha
-------------------------------------------------------------------------------
config.color_scheme = 'Catppuccin Mocha'

-------------------------------------------------------------------------------
-- Window appearance
-------------------------------------------------------------------------------
config.window_background_opacity = 0.80
config.window_decorations = 'RESIZE'
config.window_padding = { left = 8, right = 8, top = 8, bottom = 8 }

-------------------------------------------------------------------------------
-- Disable tab bar (tmux handles multiplexing)
-------------------------------------------------------------------------------
config.enable_tab_bar = false
config.hide_tab_bar_if_only_one_tab = true

{{- if eq .chezmoi.os "darwin" }}
-------------------------------------------------------------------------------
-- macOS-specific
-------------------------------------------------------------------------------
config.macos_window_background_blur = 10
{{- end }}

-------------------------------------------------------------------------------
-- Keybindings: pass through to tmux, fix word-jump
-------------------------------------------------------------------------------
config.keys = {
  { key = 'LeftArrow', mods = 'OPT', action = wezterm.action.SendKey { key = 'b', mods = 'ALT' } },
  { key = 'RightArrow', mods = 'OPT', action = wezterm.action.SendKey { key = 'f', mods = 'ALT' } },
  { key = 'Backspace', mods = 'OPT', action = wezterm.action.SendKey { key = 'w', mods = 'CTRL' } },
}

return config
